<%layout("/layouts/boilerplate")%>

<body>
    <h1>New chat</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/posts"method="post"novalidate class="needs-validation">
                <div class="mt-3 mb-3">
                    <label for=""class="form-label">Enter Your name</label>
                    <input type="text"placeholder="abc"name="from"class="form-control"required>
                    <div class="invalid-feedback">Please Enter name</div>
                </div>
                <div class="mb-3">
                    <label for=""class="form-label">Enter whom who want to send message</label>
                    <input type="text"placeholder="abc"name="to"class="form-control"required>
                    <div class="invalid-feedback">Please Enter Receivers name</div>
                </div>
                <div class="mb-3">
                    <label for=""class="form-label">Enter Message</label>
                    <textarea name="msg" id="" class="form-control"required></textarea>
                    <div class="invalid-feedback">Please Write Message</div>
                </div>
                <div>
                    <button class="btn btn-success">Send</button>
                </div>
            </form>
        </div>
    </div>
</body>
